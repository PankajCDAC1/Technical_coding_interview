public class minimum_sum{
    public static void main(String[] args) {
        int[] arr = {1, -1, 2, -8, 5, -2, 3,80};
        int n = arr.length;
        int temp = Integer.MAX_VALUE;

         for(int i=0; i<n-1; i++){
             int j = i+1;
             if(arr[i]+arr[j]<temp){
                 temp = arr[i]+arr[j];
             }
         }
         System.out.println(temp);


    }
}
